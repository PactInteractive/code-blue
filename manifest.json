{
  "name": "Code Blue",
  "description": "Syntax highlighting for code blocks on X/Twitter",
  "version": "0.2.1",
  "manifest_version": 3,
  "icons": {
    "16": "/images/icon_16.png",
    "48": "/images/icon_48.png",
    "128": "/images/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.x.com/*",
        "https://*.twitter.com/*"
      ],
      "css": [
        "lib/katex.css",
        "lib/prism.css"
      ],
      "js": [
        "lib/katex.js",
        "lib/prism.js",
        "src/highlightCodeBlocks.js"
      ]
    }
  ]
}
